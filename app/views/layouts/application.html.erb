<!DOCTYPE html>
<html>
  <head>
    <title>StockWatch</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    
  </head>

  <body>

  <div>
      <% if logged_in?%>
      <%= link_to "Add a Stock", new_stock_path %> |
      <%= link_to "All Stocks", stocks_path %> |
      <%= link_to "My Stocks", user_stocks_path(current_user) %> |
      <%= link_to "Add a Comment", new_comment_path %> |
      <%= link_to "All Categories", categories_path %> |
      <%= link_to "Home", user_path(current_user)%> |
      <%= link_to "Logout", logout_path, method:"delete"%>

      
      <% end %>

    </div>

    <div>
      <% if flash[:message] %>
          <%= flash[:message]%>

      <% end %>
      <%= @error%>
    </div>
    <%= yield %>
  </body>
</html>
